{
  "manifest_version": 3,
  "name": "gitlab-pn",
  "description": "A simple changer",
  "version": "1.0",
  "icons": {
    "16": "img/favicon.png",
    "32": "img/favicon.png",
    "48": "img/favicon.png",
    "128": "img/favicon.png"
  },
  "action": {
    "default_title": "gitlab-pn",
    "default_icon": "img/favicon.png",
    "default_popup": "src/features/popup/index.html"
  },
  "permissions": ["storage"],
  "host_permissions": ["*://*/*/*/-/merge_requests*"],
  "content_scripts": [
    {
      "matches": ["*://*/*/*/-/merge_requests*"],
      "js": ["dist/inject/index.mjs"],
      "run_at": "document_idle",
      "css": ["src/styles/inject.css"]
    }
  ]
}
